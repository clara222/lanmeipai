@import "../star-template/star-template.wxss";
.movie-detail-container {
  display: flex;
  flex-direction: column;
}

.header {
  width: 100%;
  height: 320rpx;
  overflow: hidden;
}
.header-bg {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}
.header-content-box {
  width: 100%;
  height: 280rpx;
  position: absolute;
  top: 0;
  left: 0;
  padding: 20rpx;
  display: flex;
  
}
.header-content-box image{
  width: 200rpx;
  height: 100%;
  margin-left: 6rpx;
  margin-right: 40rpx;
}
.content {
  display: flex;
  flex-direction: column;
}
.content .title {
  color: #fff;
  font-weight: 600;
  font-size: 46rpx;
  letter-spacing: 3px;
  margin-top: 10rpx;
 
}
.year {
  color: #fff;
  font-size: 34rpx;
  margin: 40rpx 0;
}
.like {
  display: flex;
  font-size: 30rpx;
  margin-top: 24rpx;
  color: #fff;
}
.like text {
  margin-right: 20rpx;
}
.like-color {
  color: #f55;
}
.detail {
  display: flex;
  flex-direction: column;
  padding: 26rpx;
  border-bottom: 1px solid #ccc;
}
.score {
  margin-top: 30rpx;
}
.star-box {
  display: flex;
}
.average {
  margin-left: 20rpx;
}
.detail-l {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #999;
}
.detail-r {
  font-size: 28rpx;
  color: #333;
}
.detail>view {
  margin-top: 7rpx;
}
.another-title {
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1px;
  margin-top: 8rpx;
  margin-bottom: 30rpx;
}
.score {
  display: flex;
}
.summary {
  padding: 26rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  flex-direction: column;
}
.summary .title,.casts-detail .title {
  font-size: 30rpx;
  color: #999; 
}
.summary .content {
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
  margin-top: 22rpx;
}
.casts-detail {
  padding: 26rpx; 
}
.castInfo {
  display: flex;
  flex-direction: row;
}
.cast-msg {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-right: 24rpx;
}
.cast-msg image {
  width: 158rpx;
  height: 208rpx;  
  margin-bottom: 10rpx;
}
.cast-msg text {
  font-size: 28rpx;
  color: #333;
  text-align: center;  
}

